<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zarek.crm.dao.ActivityRemarkMapper" >
  <resultMap id="BaseResultMap" type="com.zarek.crm.pojo.domain.ActivityRemark" >
    <id column="id" property="id" jdbcType="CHAR" />
    <result column="noteContent" property="notecontent" jdbcType="VARCHAR" />
    <result column="createTime" property="createtime" jdbcType="CHAR" />
    <result column="createBy" property="createby" jdbcType="VARCHAR" />
    <result column="editTime" property="edittime" jdbcType="CHAR" />
    <result column="editBy" property="editby" jdbcType="VARCHAR" />
    <result column="editFlag" property="editflag" jdbcType="CHAR" />
    <result column="activityId" property="activityid" jdbcType="CHAR" />
  </resultMap>


  <update id="updateRemark">

    update tbl_activity_remark set noteContent=#{noteContent},editBy=#{editBy},editTime=#{editTime},editFlag=#{editFlag}

    where id=#{id}

  </update>

  <insert id="saveRemark">

    insert into tbl_activity_remark(

      id,
      noteContent,
      createTime,
      createBy,
      editFlag,
      activityId


    )

    values(

            #{id},
            #{noteContent},
            #{createTime},
            #{createBy},
            #{editFlag},
            #{activityId}


          )



  </insert>

  <delete id="deleteById">

    delete from tbl_activity_remark where id=#{id}

  </delete>

  <select id="getRemarkListByAid" resultType="com.zarek.crm.pojo.domain.ActivityRemark">

    select * from tbl_activity_remark where activityId=#{activityId}

  </select>

  <delete id="deleteByAids">

    delete

    from tbl_activity_remark

    where activityId in

    <foreach collection="array" item="aid" open="(" close=")" separator=",">

      #{aid}

    </foreach>

  </delete>

  <select id="getCountByAids" resultType="int">

    select count(*)

    from tbl_activity_remark

    where activityId in

    <foreach collection="array" item="aid" open="(" close=")" separator=",">

      #{aid}

    </foreach>


  </select>


</mapper>